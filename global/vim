# vim: ft=sh
use "brew"
use "github"
brew_pkg "vim"

github "mavcunha/bash" into: "${HOME}/Projects"

# link vimrc to home
do_run "ln -f -s ${PROJECTS_DIR}/bash/dotfiles/vimrc ${HOME}/.vimrc"
  unless_link "${HOME}/.vimrc"

do_run "mkdir -p ${HOME}/.vim/bundle"
  unless_dir "${HOME}/.vim/bundle"

function install_bundles() {
  local bundles=("${!1}")
  for b in ${bundles[@]}; do
    local repo=${b}
    github "${repo}" into: "${HOME}/.vim/bundle"
  done
}

vim_bundles=(
  'tpope/vim-pathogen'
  'tpope/vim-surround'
  'tpope/vim-unimpaired'
  'mavcunha/rainbow_parentheses.vim'
  'vim-ruby/vim-ruby'
  'davidoc/taskpaper.vim'
  'arnoudbuzing/wolfram-vim')

install_bundles vim_bundles[@]
