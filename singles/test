# vim: ft=sh

# simple do_runs
do_run "in_green 'Should execute\n'"
  unless "false"

do_run "error 'should not execute'"
  unless "true"

do_run 'error "should refuse to execute"'
  unless "false"

do_run 'do_run "in_green \"recursive\n\""; if_ "true;true;true;"'
  if_ "true;true;"

# force dry-run mode
use "core-dryrun"
run "error 'this is a NOOP\n'"

do_run "error 'do_run NOOP'"
 if_ "true;true"
